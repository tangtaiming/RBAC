<?xml version="1.0" encoding="UTF-8" ?>
<user class="roleRsVo">
    <head>
        <title>role.management</title>
        <script src="admin/role.js" />
        <link href="admin/role.css" />
        <create link="/admin/createRole" />
    </head>
    <body>
        <head-container>
            <column title="id" />
            <column title="name" />
            <column title="status" width="100px"/>
            <column title="create.date" />
            <column title="action" />
        </head-container>
        <search-container>
            <column type="text" name="id" />
            <column type="text" name="name" />
            <column type="select" name="status" option="Status" />
            <column type="text" name="createDate" />
            <column type="action" style="base">
                <param type="edit" link="/admin/editRole" />
                <param type="delete" link="/admin/deleteRole" />
            </column>
        </search-container>
        <data-container>
            <column name="id" />
            <column name="name" />
            <column name="status" />
            <column name="createDate" />
            <column type="action" />
        </data-container>
    </body>
</user>